{
  "compilerOptions": {
    /* Basic Options */
    "jsxImportSource": "@emotion/react",
    "isolatedModules": true,
    "removeComments": true,
    "declaration": true,
    "sourceMap": true,
    "allowJs": true,
    "module": "esnext",
    "target": "es5",
    "noEmit": true,
    "jsx": "preserve",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "incremental": true,
    /* Strict Type-Checking Options */
    "strictNullChecks": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strict": true,
    /* Additional Checks */
    "noFallthroughCasesInSwitch": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    /* Module Resolution Options */
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "rootDirs": [
      "src"
    ],
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"]
    },
    /* Other Options */
    "forceConsistentCasingInFileNames": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "typeRoots": [
      "./node_modules/@types",
      "typings"
    ]
  },
  "include": [
    "next-env.d.ts",
    "typings/*",
    "**/*.tsx",
    "**/*.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    ".next",
    "build",
    "dist",
  ]
}
